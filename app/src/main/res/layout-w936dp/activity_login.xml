<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Top Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <!-- Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_header"
            android:textColor="#E8E8E8"
            android:textSize="18sp"
            android:textStyle="normal"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Logo and App Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_logo_light"
                android:layout_marginEnd="12dp"
                android:contentDescription="@string/logo_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

        <!-- Follow-ups Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_notification_overlay"
                app:tint="#4FC3F7"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/smart_analytics" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smart_analytics"
                android:textColor="#B8B8B8"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- Terms and Privacy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_privacy"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Email Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_input_background"
            android:hint="Enter your email address"
            android:textColorHint="#9E9E9E"
            android:textColor="#333333"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:selectAllOnFocus="true"
            android:layout_marginBottom="24dp"
            android:importantForAutofill="no" />

        <!-- Password Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_input_background"
            android:hint="Enter your password"
            android:textColorHint="#9E9E9E"
            android:textColor="#333333"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:selectAllOnFocus="true"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:layout_marginBottom="8dp"
            android:importantForAutofill="no" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/forgot_password"
            android:textColor="#4FC3F7"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginBottom="32dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <!-- Login Button -->
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/action_sign_in_short"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/primary_button_background"
            android:layout_marginBottom="16dp" />

        <!-- Demo Mode Button -->
        <Button
            android:id="@+id/demo_mode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/action_demo_mode"
            android:textColor="#4FC3F7"
            android:textSize="16sp"
            android:background="@drawable/demo_button_background"
            android:layout_marginBottom="24dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:indicatorColor="#4FC3F7"
            android:layout_marginBottom="24dp" />

        <!-- Create Account -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_to_app"
                android:textColor="#B8B8B8"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_create_account"
                android:textColor="#4FC3F7"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</ScrollView>