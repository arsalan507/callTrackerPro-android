<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_ticket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left side - Ticket info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Ticket Number -->
                <TextView
                    android:id="@+id/tvTicketNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#TKT-1234"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:background="@drawable/chip_background_outline"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    tools:text="#TKT-1234" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- SLA Status -->
                <TextView
                    android:id="@+id/tvSlaStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="On Track"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/circle_active"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    tools:text="On Track" />

            </LinearLayout>

            <!-- Contact Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Contact Avatar -->
                <TextView
                    android:id="@+id/tvContactAvatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_active"
                    android:gravity="center"
                    android:text="J"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Contact Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvContactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="John Doe" />

                    <TextView
                        android:id="@+id/tvContactInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1 234 567 8900 â€¢ Acme Corp"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="+1 234 567 8900 â€¢ Acme Corp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Status and Category Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTicketStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/chip_background"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Open" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales"
                    android:textSize="12sp"
                    android:background="@drawable/chip_background_outline"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Sales" />

                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ž Phone"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="ðŸ“ž Phone" />

            </LinearLayout>

            <!-- Assignment and Due Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAssignedTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assigned: John Smith"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    tools:text="Assigned: John Smith" />

                <TextView
                    android:id="@+id/tvDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due: Today"
                    android:textSize="11sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="Due: Today" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right side - Priority and Actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Priority Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:id="@+id/priorityIndicator"
                    android:layout_width="4dp"
                    android:layout_height="24dp"
                    android:background="@color/priority_high" />

                <TextView
                    android:id="@+id/tvPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="High"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/priority_high"
                    tools:text="High" />

            </LinearLayout>

            <!-- Deal Value (if applicable) -->
            <TextView
                android:id="@+id/tvDealValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="$5,000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/success_green"
                android:visibility="gone"
                tools:text="$5,000"
                tools:visibility="visible" />

            <!-- Action Menu -->
            <ImageView
                android:id="@+id/btnTicketMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_more"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Ticket menu" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>