<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Activity Icon -->
        <ImageView
            android:id="@+id/iv_activity_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_active"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notification"
            android:tint="?attr/colorPrimary"
            tools:ignore="UseAppTint" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Activity Title"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="5 min ago"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_activity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Activity description text goes here"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <!-- User and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_activity_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="John Doe"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_person"
                    app:drawableTint="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tv_activity_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/chip_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="Active"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Priority Indicator -->
        <View
            android:id="@+id/view_priority_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="?attr/colorPrimary"
            android:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>