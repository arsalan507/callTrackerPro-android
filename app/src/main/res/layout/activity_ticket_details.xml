<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Loading Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contact Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_contact_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Contact Information"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Contact Name - View Mode -->
                    <TextView
                        android:id="@+id/text_contact_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:text="John Doe" />

                    <!-- Contact Name - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Contact Name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_contact_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <!-- Phone Number - View Mode -->
                        <TextView
                            android:id="@+id/text_phone_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp"
                            android:visibility="gone"
                            tools:text="+1 (555) 123-4567" />

                        <ImageView
                            android:id="@+id/button_call"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:src="@drawable/ic_phone"
                            android:visibility="gone"
                            app:tint="@color/status_new" />

                        <ImageView
                            android:id="@+id/button_sms"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:src="@drawable/ic_sms"
                            android:visibility="gone"
                            app:tint="@color/status_new" />

                    </LinearLayout>

                    <!-- Phone Number - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Phone Number"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Company - View Mode -->
                    <TextView
                        android:id="@+id/text_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="Acme Corporation" />

                    <!-- Company - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Company"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Email - View Mode -->
                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:visibility="gone"
                        tools:text="john.doe@acme.com" />

                    <!-- Email - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Call Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_call_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Call Information"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Call Type - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_call_type_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Type:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_call_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            tools:text="Incoming Call" />

                    </LinearLayout>

                    <!-- Call Type - Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_call_type_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Call Type"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_call_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/call_types" />

                    </LinearLayout>

                    <!-- Call Duration - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_call_duration_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Duration:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_call_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            tools:text="5:23" />

                    </LinearLayout>

                    <!-- Call Duration - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_call_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Duration (minutes)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_call_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Call Date - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_call_date_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Date:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_call_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            tools:text="Jan 15, 2024 14:30" />

                    </LinearLayout>

                    <!-- Call Date - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_call_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Call Date (YYYY-MM-DD)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_call_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Call Quality - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_call_quality_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Quality:"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/text_call_quality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            tools:text="4/5 stars" />

                    </LinearLayout>

                    <!-- Call Quality - Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_call_quality_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Call Quality (1-5)"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_call_quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/call_quality_ratings" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lead Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_lead_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Lead Information"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Status Chips - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_status_chips_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_lead_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            tools:text="New" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_priority"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            tools:text="High" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_interest_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Hot Lead" />

                    </LinearLayout>

                    <!-- Lead Status - Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_lead_status_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Lead Status"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_lead_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/lead_status_options" />

                    </LinearLayout>

                    <!-- Priority - Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_priority_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Priority"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_priority"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/priority_options" />

                    </LinearLayout>

                    <!-- Interest Level - Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_interest_level_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Interest Level"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_interest_level"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/interest_level_options" />

                    </LinearLayout>

                    <!-- Lead Details - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_lead_details_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_lead_source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary"
                            tools:text="Source: Cold Call" />

                        <TextView
                            android:id="@+id/text_budget_range"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary"
                            tools:text="Budget: $10,000 - $50,000" />

                        <TextView
                            android:id="@+id/text_timeline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            tools:text="Timeline: Q2 2024" />

                    </LinearLayout>

                    <!-- Budget Range - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_budget_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Budget Range (e.g., $10,000 - $50,000)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_budget_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Timeline - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_timeline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Timeline (e.g., Q2 2024)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_timeline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Pipeline Information Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_pipeline_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Pipeline Information"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Stage Chip - View Mode -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_stage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        tools:text="Proposal" />

                    <!-- Pipeline Stage - Edit Mode -->
                    <LinearLayout
                        android:id="@+id/layout_stage_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Pipeline Stage"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <Spinner
                            android:id="@+id/spinner_stage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/pipeline_stages" />

                    </LinearLayout>

                    <!-- Pipeline Details - View Mode -->
                    <LinearLayout
                        android:id="@+id/layout_pipeline_details_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_assigned_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary"
                            tools:text="Assigned: Jane Smith" />

                        <TextView
                            android:id="@+id/text_next_follow_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/text_secondary"
                            tools:text="Next Follow-up: Jan 20, 2024" />

                        <TextView
                            android:id="@+id/text_deal_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:textColor="@color/success_color"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            tools:text="Deal Value: $25,000" />

                        <TextView
                            android:id="@+id/text_conversion_probability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            tools:text="Conversion Probability: 75%" />

                    </LinearLayout>

                    <!-- Assigned Agent - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_assigned_agent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Assigned Agent (optional)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_assigned_agent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Next Follow-up - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_next_follow_up"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Next Follow-up Date (YYYY-MM-DD)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_next_follow_up"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Deal Value - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_deal_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Deal Value ($)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_deal_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Conversion Probability - Edit Mode -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_conversion_probability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Conversion Probability (%)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_conversion_probability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Save Button for Create/Edit Mode -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Save Ticket"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Notes Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Notes"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Add Note Section -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Add a note...">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_new_note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:lines="3" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_add_note"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Add Client Note"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/button_add_private_note"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add Internal Note" />

                    </LinearLayout>

                    <!-- Notes List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_ticket_note" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>