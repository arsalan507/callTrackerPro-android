<?xml version="1.0" encoding="utf-8"?>
<!-- progress_indicator.xml - Reusable progress indicator component -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Step Circles -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <!-- Step 1 Circle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/step1Circle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_active"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="-24dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Connection Line -->
        <View
            android:id="@+id/connectionLine"
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:alpha="0.5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="-16dp" />

        <!-- Step 2 Circle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/step2Circle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_inactive"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="-24dp"
                android:gravity="center"
                android:alpha="0.5" />

        </LinearLayout>

    </LinearLayout>

    <!-- Step Labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/step1Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Account Setup"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:alpha="1.0" />

        <TextView
            android:id="@+id/step2Label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal Details"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:alpha="0.5" />

    </LinearLayout>

</LinearLayout>