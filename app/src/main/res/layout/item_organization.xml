<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Organization Name -->
        <TextView
            android:id="@+id/tvOrganizationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            tools:text="Acme Corporation" />

        <!-- Domain -->
        <TextView
            android:id="@+id/tvOrganizationDomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="acme.com"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="acme.com" />

        <!-- Subscription Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSubscriptionPlan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Plan: Professional"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                tools:text="Plan: Professional" />

            <TextView
                android:id="@+id/tvSubscriptionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Active"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Status: Active" />

        </LinearLayout>

        <!-- Selection Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tap to select â†’"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="italic" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>